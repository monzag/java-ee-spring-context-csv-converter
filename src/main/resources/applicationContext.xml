<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="fileReader" class="com.monzag.service.FileReader" />
    <bean id="outputFactory" class="com.monzag.service.OutputFormatterFactory"/>
    <bean id="csvConverter" class="com.monzag.controllers.SimpleCsvConverter">
        <constructor-arg ref="fileReader"/>
        <constructor-arg ref="outputFactory"/>
    </bean>
</beans>